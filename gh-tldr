#!/bin/bash
# gh-tldr - Generate a TL;DR summary of your GitHub activity
# Usage: gh-tldr [username]

set -e

# Resolve symlinks to get the real script directory
SCRIPT_DIR="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}" || echo "${BASH_SOURCE[0]}")")" && pwd)"
USERNAME="${1:-}"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check dependencies
check_deps() {
  local missing=()

  if ! command -v gh &> /dev/null; then
    missing+=("gh (GitHub CLI)")
  fi

  if ! command -v jq &> /dev/null; then
    missing+=("jq")
  fi

  if ! command -v claude &> /dev/null; then
    missing+=("claude (Claude Code CLI)")
  fi

  if [ ${#missing[@]} -ne 0 ]; then
    echo -e "${RED}Fehlende Abh채ngigkeiten:${NC}"
    for dep in "${missing[@]}"; do
      echo "  - $dep"
    done
    exit 1
  fi

  # Check gh auth
  if ! gh auth status &> /dev/null; then
    echo -e "${RED}GitHub CLI nicht authentifiziert. F체hre 'gh auth login' aus.${NC}"
    exit 1
  fi
}

main() {
  check_deps

  echo -e "${YELLOW}Sammle GitHub-Aktivit채t...${NC}" >&2

  # Fetch GitHub data
  GITHUB_DATA=$("$SCRIPT_DIR/fetch-github-activity.sh" "$USERNAME")

  # Check if there's any activity
  TOTAL_ACTIVITY=$(echo "$GITHUB_DATA" | jq '
    (.prs_created | length) +
    (.prs_merged | length) +
    (.prs_reviewed | length) +
    (.issues_created | length) +
    (.issues_closed | length)
  ')

  if [ "$TOTAL_ACTIVITY" -eq 0 ]; then
    echo ""
    echo "tl;dr $(date +%d.%m)"
    echo ""
    echo "Keine GitHub-Aktivit채t in den letzten 24 Stunden."
    exit 0
  fi

  echo -e "${YELLOW}Generiere Zusammenfassung mit Claude...${NC}" >&2

  # Read prompt template and append data
  PROMPT=$(cat "$SCRIPT_DIR/prompt.txt")
  FULL_PROMPT="$PROMPT

$GITHUB_DATA"

  # Call Claude Code to generate summary
  echo ""
  claude -p "$FULL_PROMPT" --output-format text 2>/dev/null
}

main "$@"
